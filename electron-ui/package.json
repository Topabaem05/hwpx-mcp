{
  "name": "hwpx-mcp-electron-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Open WebUI-inspired Electron shell for hwpx-mcp",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-stack": "node ./scripts/start-stack.js",
    "dev": "electron .",
    "build:win": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "build": {
    "appId": "io.topabaem05.hwpx-mcp",
    "productName": "HWPX MCP",
    "directories": {
      "output": "../dist/electron-windows"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^26.8.0"
  },
  "engines": {
    "node": ">=18"
  }
}
