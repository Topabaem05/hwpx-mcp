{
  "name": "hwpx-mcp-electron-ui",
  "version": "0.3.5",
  "private": true,
  "description": "Electron desktop client for HWPX-MCP document workbench",
  "author": {
    "name": "HWP MCP Team",
    "email": "hwpx-mcp@users.noreply.github.com"
  },
  "homepage": "https://github.com/Topabaem05/hwpx-mcp",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-stack": "node ./scripts/start-stack.js",
    "dev": "electron .",
    "build:backend:win": "pyinstaller ../hwpx-mcp-backend.spec --noconfirm --clean --distpath ../dist --workpath ../dist/hwpx-mcp-backend-build",
    "build:win": "node ./scripts/ensure-wine.js && electron-builder --win",
    "build:win:bundle": "npm run build:backend:win && npm run build:win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:dir": "node ./scripts/ensure-wine.js && electron-builder --win --dir"
  },
  "build": {
    "appId": "io.topabaem05.hwpx-mcp",
    "productName": "HWPX MCP",
    "directories": {
      "output": "../dist/electron-installer"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "scripts/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../dist/hwpx-mcp-backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "extraFiles": [],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "extraResources": [
        {
          "from": "../dist/hwpx-mcp-backend-win",
          "to": "backend-win",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    },
    "afterPack": "./scripts/after-pack.js"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^26.8.0"
  },
  "engines": {
    "node": ">=18"
  }
}
